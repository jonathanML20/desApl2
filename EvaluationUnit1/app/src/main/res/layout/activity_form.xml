<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.utng.jonaml.evaluationunit1.FormActivity">

    <TextView android:id="@+id/txv_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form "
        android:textAlignment="center"
        android:textSize="10pt"
        android:layout_marginBottom="@dimen/form_alu"
        />
    <TextView android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Name:"
        />

    <EditText android:id="@+id/edt_name_alu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/form_alu"
        />

    <TextView android:id="@+id/txv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Age:"
        />

    <EditText android:id="@+id/edt_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/form_alu"
        />

    <TextView android:id="@+id/txv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Phone:"
        />
    <EditText android:id="@+id/edt_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/form_alu"
        />


    <Button android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="@dimen/form_alu"
        />
</LinearLayout>
